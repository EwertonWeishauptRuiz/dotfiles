#STEP=5%

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=MEM
separator=true
interval=30
color=#689d6a


# [memory]
# label=SWAP
# instance=swap
# separator=true
# interval=30

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=üíæ
# DIR=/mnt/data
interval=30
separator=true
color=#438588

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
# [iface]
# #IFACE=wlan0
# color=#00FF00
# interval=10
# separator=false

# [wifi]
# #INTERFACE=wlp3s0
# label=wifi:
# interval=10
# separator=false

# [bandwidth]
# #INTERFACE=eth0
# interval=5

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label=üíΩ
interval=10
min_width=100.00%
color=#fe8019

[load_average]
label=LOAD
interval=10
color=#d3869b
# Battery indicator
#
# The battery instance defaults to 0.
[battery]
label=BAT
#label=‚ö°
interval=30

# Date Time
#
# [time]
# # command=date '+%Y-%m-%d %H:%M:%S'
# command=/usr/share/i3blocks/time
# #TZ_FILE=~/.tz
# # STRFTIME_FORMAT=%Y-%m-%d %H:%M
# # TZONES=$DEFAULT_TZ,Brazil/East,Australia/Brisbane,Asia/Calcutta
# # TZ_LABELS=,Brazil,AU,Hyderabad
# interval=1



[time]
command=date '+%a %d-%m-%Y %H:%M:%S üá©üá∞'
interval=1
color=#fb4934

[brazil-date-time]
command=/usr/share/i3blocks/br-datetime.sh
interval=1
color=#b8bb26


[weather]
command=curl -Ss -H "Accept-Language: it" https://wttr.in/cph?T0m | cut -c 16- | head -5 | sed 's/o: cph//g' | xargs echo
interval=50
color=#A4C2F4

[mooncycle]
command=curl -Ss wttr.in/Copenhagen?format=%m
interval=3600


